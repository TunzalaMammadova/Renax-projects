@namespace Final_project.ViewModels.ServiceDetails

@model ServiceDetailDetailVM

<div class="container mt-5">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="border-top-0">Description</th>
                    <th class="border-top-0">Options</th>
                    <th class="border-top-0">OptionDescription</th>
                    <th class="border-top-0">Booking</th>
                    <th class="border-top-0">BookingDescription</th>
                    <th class="border-top-0">Luggage</th>
                    <th class="border-top-0">LuggageDescription</th>
                    <th class="border-top-0">Service</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="txt-oflo">
                        <h6>@Model.Description</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Options</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.OptionDescription</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Booking</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.BookingDescription</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Luggage</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.LuggageDescription</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Service</h6>
                    </td>
                </tr>
            <tbody>
        </table>
    </div>
    <div class="form-group mt-3">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>

</div>