@namespace Final_project.ViewModels.ServiceDetails

@model ServiceDetailEditVM


<div class="container">
    <div class="card">
        <div class="card-header text-success">
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" method="post" class="" enctype="multipart/form-data">
                <div class="form-group">

                    <select class="form-control mt-3" asp-for="ServiceId" asp-items="@ViewBag.services">
                    </select>

                    <input autocomplete="off" asp-for="Description" type="text"placeholder="Description" class="form-control form-control-line" autocomplete="off" />
                    <span class="text-danger" asp-validation-for="Description"></span>

                    <input autocomplete="off" asp-for="Options" type="text" placeholder="Options" class="form-control form-control-line" autocomplete="off" />
                    <span class="text-danger" asp-validation-for="Options"></span>

                    <input autocomplete="off" asp-for="OptionDescription" type="text" placeholder="OptionDescription" class="form-control form-control-line" autocomplete="off" />
                    <span class="text-danger" asp-validation-for="OptionDescription"></span>

                    <input autocomplete="off" asp-for="Booking" type="text"  placeholder="Booking" class="form-control form-control-line" autocomplete="off" />
                    <span class="text-danger" asp-validation-for="Booking"></span>

                    <input autocomplete="off" asp-for="BookingDescription" type="text"  placeholder="BookingDescription" class="form-control form-control-line" autocomplete="off" />
                    <span class="text-danger" asp-validation-for="BookingDescription"></span>

                    <input autocomplete="off" asp-for="Luggage" type="text"  placeholder="Luggage" class="form-control form-control-line" autocomplete="off" />
                    <span class="text-danger" asp-validation-for="Luggage"></span>

                    <input autocomplete="off" asp-for="LuggageDescription" type="text" placeholder="LuggageDescription" class="form-control form-control-line" autocomplete="off" />
                    <span class="text-danger" asp-validation-for="LuggageDescription"></span>

                </div>
                <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                <a type="reset" asp-action="Index" class="btn btn-danger btn-sm">Back</a>
            </form>
        </div>
    </div>
</div>

