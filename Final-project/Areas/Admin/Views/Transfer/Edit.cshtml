
@namespace Final_project.ViewModels.Transfer

@model TransferEditVM

<div class="container mt-5">

    <div class="image">
        <img src="~/assets/image/@Model.Image" style="width:300px !important; height:200px !important" />
    </div>
    <form class="form-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <input asp-for="NewImage" class="form-control" />
            <span class="text-danger" asp-validation-for="NewImage"></span>

            <input asp-for="Name" type="text" class="form-control" maxlength="50" autocomplete="off" />
            <span class="text-danger" asp-validation-for="Name"></span>

            <input asp-for="Description" type="text" class="form-control" maxlength="50" autocomplete="off" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">Back</a>
    </form>
</div>
