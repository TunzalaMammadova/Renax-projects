@namespace Final_project.ViewModels

@model HomeVM


<title>RENAX</title>


<header>
    @foreach (var item in Model.VideoInfos)
    {
        <div class="col-12">
            <div class="rent-area">
                <div class="rent">
                    <h6>@item.SubTitle</h6>
                    <h1>@item.Title</h1>
                    <h5>@item.Name</h5>
                    <h5>$@item.Price/day</h5>
                    <a class="button rent-now-scroll" href="">
                        Rent Now <i class="fa-solid fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    }
    <div class="video-area">
        <video playsinline autoplay loop muted test>
            <source src="~/assets/image/@Model.Videos.FirstOrDefault().BackgroundVideo" type="video/mp4" playsinline autoplay loop muted>
        </video>
    </div>
</header>
<main>
    <section id="number-area">
        <div class="number mt-120 mb-60">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model.Proccesses)
                    {
                        <div class="col-4">
                            <div class="item">
                                <div class="con">
                                    <div class="no">@item.Number</div>
                                    <h5>@item.Title</h5>
                                    <p>@item.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <section id="about-section">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Abouts)
                {
                    <div class="col-7">
                        <div class="content">
                            <div class="subtitle">@item.SubTitle</div>
                            <div class="title">@item.Title</div>
                            <div class="rentax">
                                <p><i class="fa-solid fa-check ok"></i>Sport Cars and Luxury Cars</p>
                                <p><i class="fa-solid fa-check ok"></i>Economy Cars</p>
                                <div>
                                    <a class="read-more" asp-controller="About" asp-action="Index">Read More<i class="fa-solid fa-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @foreach (var item in Model.Abouts)
                {
                    <div class="col-5">
                        <div class="abouts">
                            <div class="about-img">
                                <img src="~/assets/image/@item.Image" class="" alt="">
                            </div>
                            <div class="about-btn">
                                <a href="https://www.youtube.com/watch?v=1LxcTt1adfY">
                                    <i class="fa-solid fa-play"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <div class="line-section"></div>
    <section id="services">
        <div class="services2 section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="subtitle">
                            What We Do
                        </div>
                        <div class="title">Our Services</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="services-cart">
        <div class="container">
            <div class="row">
                <div class="owl-carousel">
                    @foreach (var item in Model.Services)
                    {
                        <div class="col-4">
                            <div class="item">
                                <div class="service-cart">
                                    <div class="service-img">
                                        <img src="~/assets/image/@item.Image" alt="">
                                    </div>
                                    <div class="service-btn">
                                        <a>!</a>
                                    </div>
                                    <div class="ser-title">
                                        <a asp-controller="ServiceDetail" asp-action="Index" asp-route-id="@item.Id">
                                            <h4>@item.Name</h4>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                     }
                </div>
            </div>
        </div>
    </section>
    <section id="booking" style="background-image: url('/assets/image/audi.jpg');">
        <div class="container">
            <div class="col-12">
                <div class="row">
                    <div class="rent-area">
                        <div class="rent">
                            <p>WHAT WE DO</p>
                            <h1>Book Auto Rental</h1>
                        </div>
                    </div>
                    <div class="booking-now">
                        <form action="#0" class="form brdr clearfix">
                            <div class="col2 ">
                                <div class="selection">
                                    <div class="select-inner">
                                        <select class="select1 select add right" style="width: 100%">
                                            <option value="0" data-select2-id="12">Choose Rental Car</option>
                                            <option value="1">Lamborghini Urus</option>
                                            <option value="2">Aston Martin DBX</option>
                                            <option value="3">Bentley Bentayga</option>
                                            <option value="4">Bugatti Mistral W16</option>
                                            <option value="5">Rolls Royce Cullinan</option>
                                            <option value="6">Bentley Continental</option>
                                            <option value="7">Audi RS7 Sport Carsback</option>
                                            <option value="8">AUDI Q8</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col2">
                                <div class="selection">
                                    <div class="select-inner">
                                        <select class="select1 select add" style="width:100%">
                                            <option value="0">Pick Up Location</option>
                                            <option value="1">Dubai</option>
                                            <option value="2">Abu Dhabi</option>
                                            <option value="3">Sharjah</option>
                                            <option value="4">Alain</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col1">
                                <div class="input">
                                    <div class="input1-inner">
                                        <input type="date" class="form-control input" placeholder="Pick Up Date" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col2">
                                <div class="selection">
                                    <div class="select-inner">
                                        <select class="select1 select add" style="width: 100%">
                                            <option value="0">Drop Off Location</option>
                                            <option value="1">Alain</option>
                                            <option value="2">Sharjah</option>
                                            <option value="3">Abu Dhabi</option>
                                            <option value="4">Dubai</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col1">
                                <div class="input">
                                    <div class="input1-inner">
                                        <input type="date" class="form-control input" placeholder="Return Date">
                                    </div>
                                </div>
                            </div>
                            <div class="col3">
                                <button type="submit" class="booking-button">Rent Now</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="cover"></div>
        </div>
    </section>
    <section class="cars1">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center mb-30">
                    <div class="section subtitle">Select Your Car</div>
                    <div class="section title">Luxury Cars Car Fleet</div>
                </div>
            </div>
            <div class="cars1-carousel owl-theme owl-carousel owl-loaded owl-drag">
                @foreach (var item in Model.Cars)
                {
                    <div class="item">
                        <div class="img">
                            <img src="~/assets/image/@item.CarImages.FirstOrDefault(m => m.IsMain).Image" class="" alt="">
                        </div>
                        <div class="con opacity-1">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="title"><a href="#">@item.Name</a></div>
                                    <div class="details">
                                        <span><i class="fa-solid fa-whiskey-glass"></i>@item.Door Seats</span>
                                        <span><i class="fa-solid fa-gears"></i> @item.Transmission</span>
                                        <span><i class="fa-solid fa-suitcase"></i> @item.Luggage</span>
                                        <span><i class="fa-solid fa-user"></i> Age @item.Age</span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="book">
                                        <div>
                                            <a asp-controller="CarDetail" asp-action="Index" asp-route-id="@item.Id" class="btn"><span>Details</span></a>
                                        </div>
                                        <div><span class="price">$@item.Price</span><span>/day</span></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <div class="line-section"></div>
    <section class="car-types1 section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center mb-30">
                    <div class="subtitle">Categories</div>
                    <div class="title"><span>Rental Car Types</span></div>
                </div>
                <div class="col-md-12">
                    <div class="owl-carousel owl-theme owl-loaded owl-drag">
                        @foreach (var item in Model.Categories)
                        {
                            <div class="item">
                                <img src="~/assets/image/@item.Image" class="img-fluid" alt="">
                                <div class="title">
                                    <h4>@item.Name</h4>
                                </div>
                                <div class="curv-butn icon-bg">
                                    <a asp-controller="Car" asp-action="Index" asp-route-id="@item.Id" class="">
                                        <div class="icon"><i class="fa-solid fa-arrow-right"></i></div>
                                    </a>
                                    <div class="br-left-top">
                                        <svg viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg"
                                             class="w-11 h-11">
                                            <path d="M11 1.54972e-06L0 0L2.38419e-07 11C1.65973e-07 4.92487 4.92487 1.62217e-06 11 1.54972e-06Z"
                                                  fill="#1b1b1b"></path>
                                        </svg>
                                    </div>
                                    <div class="br-right-bottom">
                                        <svg viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg"
                                             class="w-11 h-11">
                                            <path d="M11 1.54972e-06L0 0L2.38419e-07 11C1.65973e-07 4.92487 4.92487 1.62217e-06 11 1.54972e-06Z"
                                                  fill="#1b1b1b"></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="line-section"></div>
    <section id="rent-now" style="background-image: url('/assets/image/explore.jpg');">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="now-text">
                        <p>EXPLORE</p>
                        <h1>Car Promo Video</h1>
                    </div>
                    <div class="explore">
                        <div class="rent-btn">
                            <a href="https://youtu.be/1LxcTt1adfY"><i class="fa-solid fa-play"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cover"></div>
        </div>
    </section>
    <section id="process-area">
        <div class="container">
            <div class="row">
                <div class="now-text">
                    <p>STEPS</p>
                    <h1>Car Rental Process</h1>
                </div>
                @foreach (var item in Model.Proccesses)
                {
                    <div class="col-4">
                        <div class="item">
                            <div class="text">
                                <h5>@item.Title</h5>
                                <p>@item.Description</p>
                            </div>
                            <div class="num-area">
                                <div class="num">
                                    <div class="num-item">
                                        <div class="number">@item.Number</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section id="rent-now" style="background-image: url('/assets/image/bentley.jpg');">
        <div class="container">
            <div class="col-12">
                <div class="row">
                    <div class="now-text">
                        <p>RENT YOUR CAR</p>
                        <h3>Interested in Renting?</h3>
                        <h6>Don't hesitate and send us a message.</h6>
                    </div>
                    <div class="rent">
                        <a class="wp-btn" href="https://api.whatsapp.com/">
                            <i class="fa-brands fa-whatsapp"></i> Whatsapp
                        </a>
                        <a class="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Rent Now <i class="fa-solid fa-arrow-right"></i>
                        </a>
                    </div>
                    <div class="modal fade rentcar" id="exampleModal" tabindex="-1"
                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Booking Form</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="booking-form">
                                        <div class="booking-inner">
                                            <form method="post" action="#0" class="form">
                                                <div class="booking-box">
                                                    <form method="post" action="#0" class="form">
                                                        <div class="row">
                                                            <div class="col-lg-6 col-md-12">
                                                                <input name="phone" type="text"
                                                                       placeholder="Phone *" required>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"
                                                                                style="width: 100%">
                                                                            <option value="0">Choose Car</option>
                                                                            <option value="1">
                                                                                Lamborghini Urus
                                                                            </option>
                                                                            <option value="2">
                                                                                Aston Martin DBX
                                                                            </option>
                                                                            <option value="3">
                                                                                Bentley Bentayga
                                                                            </option>
                                                                            <option value="4">
                                                                                Bugatti Mistral W16
                                                                            </option>
                                                                            <option value="5">
                                                                                Rolls Royce Cullinan
                                                                            </option>
                                                                            <option value="6">
                                                                                Bentley Continental
                                                                            </option>
                                                                            <option value="7">
                                                                                Audi RS7 Sport
                                                                                Carsback
                                                                            </option>
                                                                            <option value="8">AUDI Q8</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"
                                                                                style="width: 100%">
                                                                            <option value="0">
                                                                                Pick Up Location
                                                                            </option>
                                                                            <option value="1">Dubai</option>
                                                                            <option value="2">Abu Dhabi</option>
                                                                            <option value="3">Sharjah</option>
                                                                            <option value="4">Alain</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"
                                                                                style="width: 100%">
                                                                            <option value="0">
                                                                                Drop Off Location
                                                                            </option>
                                                                            <option value="1">Alain</option>
                                                                            <option value="2">Sharjah</option>
                                                                            <option value="3">Abu Dhabi</option>
                                                                            <option value="4">Dubai</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="inputs time">
                                                                    <label>Pick Up Date</label>
                                                                    <div class="inputs">
                                                                        <input type="date"
                                                                               placeholder="Pick Up Date" required>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="inputs time">
                                                                    <label>Return Date</label>
                                                                    <div class="inputs ">
                                                                        <input type="date"
                                                                               placeholder="Return Date">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-12 col-md-12 form-group">
                                                                <textarea name="message" id="message" cols="30"
                                                                          rows="4"
                                                                          placeholder="Additional Note"></textarea>
                                                            </div>
                                                            <div class="col-lg-12 col-md-12">
                                                                <button type="submit"
                                                                        class="booking-button mt-15">
                                                                    Rent
                                                                    Now
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="alert alert-success contact__msg"
                                                             style="display: none" role="alert">
                                                            Your message was
                                                            sent successfully.
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cover"></div>
        </div>
    </section>
    <section class="clients">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="owl-carousel">
                        @foreach (var item in Model.Brands)
                         {
                            <div class="client-logo">
                                <a href="#0"><img src="~/assets/image/@item.Image" alt=""></a>
                            </div>
                         }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section js {
    <script src="~/assets/js/script.js"></script>
}