@namespace Final_project.ViewModels

@model HomeVM


@section css {
    <link rel="stylesheet" href="~/assets/css/cars.css">
}

<title>RENAX</title>

<header>
    <section id="bckr-img" style="background-image: url('/assets/image/Bentayga.jpg');">
        <div class="container">
            <div class="col-12">
                <div class="rent-area">
                    <div class="rent">
                        <p>OUR PORTFOLIO</p>
                        <h1>Image Gallery</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="cover"></div>
    </section>
</header>
<main>
    <section id="all-cars">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12 mb-30">
                    <div class="search-sidebar">
                        <div class="search">
                            <form>
                                <input type="text" name="search" placeholder="Search ..." autocomplete="off">
                                <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="gallery-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <ul class="gallery-filter">
                        <li class="active" data-filter="*">All</li>
                        @foreach (var item in Model.Categories)
                         {
                            <li data-filter=".@item.Id">@item.Name</li>
                         }
                    </ul>
                </div>
            </div>
            <div class="cars">
                <partial name="_CarListPartialView" model="Model" />
            </div>
        </div>
    </section>
    <section id="rent-now" style="background-image: url('/assets/image/bentley.jpg');">
        <div class="container">
            <div class="col-12">
                <div class="row">
                    <div class="now-text">
                        <p>RENT YOUR CAR</p>
                        <h3>Interested in Renting?</h3>
                        <h6>Don't hesitate and send us a message.</h6>
                    </div>
                    <div class="rent">
                        <a class="wp-btn" href="">
                            <i class="fa-brands fa-whatsapp"></i> Whatsapp
                        </a>
                        <a class="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Rent Now <i class="fa-solid fa-arrow-right"></i>
                        </a>
                    </div>
                    <div class="modal fade rentcar" id="exampleModal" tabindex="-1"
                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Booking Form</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="booking-form">
                                        <div class="booking-inner">
                                            <form method="post" action="#0" class="form">
                                                <div class="booking-box">
                                                    <form method="post" action="#0" class="form">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="alert alert-success contact__msg"
                                                                     style="display: none" role="alert">
                                                                    Your
                                                                    message was sent successfully.
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-lg-6 col-md-12">
                                                                <input name="name" type="text"
                                                                       placeholder="Full Name *" required>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <input name="email" type="email"
                                                                       placeholder="Email *" required>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <input name="phone" type="text"
                                                                       placeholder="Phone *" required>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"
                                                                                style="width: 100%">
                                                                            <option value="0">
                                                                                Choose Car Type
                                                                            </option>
                                                                            <option value="1">All</option>
                                                                            <option value="2">
                                                                                Luxury Cars
                                                                            </option>
                                                                            <option value="3">
                                                                                Sport Cars
                                                                            </option>
                                                                            <option value="4">SUVs</option>
                                                                            <option value="5">
                                                                                Convertible
                                                                            </option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"
                                                                                style="width: 100%">
                                                                            <option value="0">
                                                                                Pick Up Location
                                                                            </option>
                                                                            <option value="1">Dubai</option>
                                                                            <option value="2">Abu Dhabi</option>
                                                                            <option value="3">Sharjah</option>
                                                                            <option value="4">Alain</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"
                                                                                style="width: 100%">
                                                                            <option value="0">
                                                                                Drop Off Location
                                                                            </option>
                                                                            <option value="1">Alain</option>
                                                                            <option value="2">Sharjah</option>
                                                                            <option value="3">Abu Dhabi</option>
                                                                            <option value="4">Dubai</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="inputs">
                                                                    <label>Pick Up Date</label>
                                                                    <div class="inputs">
                                                                        <input type="date"
                                                                               placeholder="Pick Up Date" required>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="inputs">
                                                                    <label>Return Date</label>
                                                                    <div class="inputs">
                                                                        <input type="date"
                                                                               placeholder="Return Date">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-12 col-md-12 form-group">
                                                                <textarea name="message" id="message" cols="30"
                                                                          rows="4"
                                                                          placeholder="Additional Note"></textarea>
                                                            </div>
                                                            <div class="col-lg-12 col-md-12">
                                                                <button type="submit"
                                                                        class="booking-button mt-15">
                                                                    Rent
                                                                    Now
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="alert alert-success contact__msg"
                                                             style="display: none" role="alert">
                                                            Your message was
                                                            sent successfully.
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cover"></div>
        </div>
    </section>
</main>


@section js {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/5.0.0/imagesloaded.pkgd.min.js"
            integrity="sha512-kfs3Dt9u9YcOiIt4rNcPUzdyNNO9sVGQPiZsub7ywg6lRW5KuK1m145ImrFHe3LMWXHndoKo2YRXWy8rnOcSKg=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.isotope/3.0.6/isotope.pkgd.min.js"
            integrity="sha512-Zq2BOxyhvnRFXu0+WE6ojpZLOU2jdnqbrM1hmVdGzyeCa1DgM3X5Q4A/Is9xA1IkbUeDd7755dNNI/PzSf2Pew=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/assets/js/cars.js"></script>
}
