@namespace Final_project.ViewModels

@model HomeVM


<div class="row gallery-items">
    @if (Model.Cars.Count() != 0)
    {
        @foreach (var item in Model.Cars)
        {
            <div class="col-lg-4 col-md-6 single-item @item.CategoryId">
                <div class=" gallery-box">
                    <div class="gallery-img">
                        <img src="~/assets/image/@item.CarImages.FirstOrDefault(m => m.IsMain).Image" class="" alt="">
                    </div>
                    <div class="bottom-fade"></div>
                    <div class="gallery-detail">
                        <h4>@item.Name</h4>
                        <a asp-controller="CarDetail" asp-action="Index" asp-route-id="@item.Id"><i class="fa-solid fa-car-side"></i></a>
                    </div>
                </div>
            </div>
        }
    }

    else
    {
        <div class="container" style="padding-top:100px;padding-bottom:200px">
            <div class="alert alert-dark text-center" role="alert">
                Oops, We do not have such a product now
            </div>
        </div>
    }

</div>