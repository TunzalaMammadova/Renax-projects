@namespace Final_project.ViewModels
@using Final_project.Helpers


@model HomeVM

@section css {
    <link rel="stylesheet" href="~/assets/css/car-listing.css">
}

<title>RENAX</title>


<header>
    <section id="bckr-img" style="background-image: url('/assets/image/Bentayga.jpg');">
        <div class="container">
            <div class="col-12">
                <div class="rent-area">
                    <div class="rent">
                        <p>RENT NOW</p>
                        <h1>Select Luxury Car</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="cover"></div>
    </section>
</header>
<main>
    <section id="all-cars">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="sort">
                        <select class="form-select" aria-label="Default select example">
                            <option id="car" selected>Sorted by</option>
                            <option value="Latest">Latest</option>
                            <option value="Price: High to Low">Price: High to Low</option>
                            <option value="Price: Low to High">Price: Low to High</option>
                            <option value="A-Z sorting">A-Z sorting</option>
                            <option value="Z-A sorting">Z-A sorting</option>
                        </select>
                    </div>
                    <div class="car-list">
                        <partial name="_CarPartialView" model="Model" />
                    </div>
                    <div class="paginate-area">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item @(Model.PaginateCar.HasPrevious ? "" : "disabled")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PaginateCar.CurrentPage-1)" aria-label="Previous">
                                        <span aria-hidden="true"><i class="fa-solid fa-angles-left"></i></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                @for (int i = 1; i <= Model.PaginateCar.TotalPage; i++)
                                 {
                                    <li class="page-item@(Model.PaginateCar.CurrentPage == i? "disabled" : "" ) "><a class="page-link @(Model.PaginateCar.CurrentPage == i ? "paginate-active" : "" )" asp-action="Index" asp-route-page="@i">@i</a></li>
                                 }
                                <li class="page-item @(Model.PaginateCar.HasNext ? "" : "disabled" )">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PaginateCar.CurrentPage+1)" aria-label="Next">
                                        <span aria-hidden="true"><i class="fa-solid fa-angles-right"></i></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


@section js {
    <script src="~/assets/js/car-listing.js"></script>
}