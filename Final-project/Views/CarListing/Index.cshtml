@namespace Final_project.ViewModels
@using Final_project.Helpers


@model HomeVM

@section css {
    <link rel="stylesheet" href="~/assets/css/car-listing.css">
}

<title>RENAX</title>


<header>
    <section id="bckr-img" style="background-image: url('/assets/image/Bentayga.jpg');">
        <div class="container">
            <div class="col-12">
                <div class="rent-area">
                    <div class="rent">
                        <p>RENT NOW</p>
                        <h1>Select Luxury Car</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="cover"></div>
    </section>
</header>
<main>
    <section id="all-cars">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="sort">
                        <select class="form-select" aria-label="Default select example">
                            <option id="car" selected>Sorted by</option>
                            <option value="Latest">Latest</option>
                            <option value="Price: High to Low">Price: High to Low</option>
                            <option value="Price: Low to High">Price: Low to High</option>
                            <option value="A-Z sorting">A-Z sorting</option>
                            <option value="Z-A sorting">Z-A sorting</option>
                        </select>
                    </div>
                    <div class="car-list">
                        <partial name="_CarPartialView" model="Model" />
                    </div>
                    <div class="paginate-area">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item @(Model.PaginateCar.HasPrevious ? "" : "disabled")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PaginateCar.CurrentPage-1)" aria-label="Previous">
                                        <span aria-hidden="true"><i class="fa-solid fa-angles-left"></i></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                @for (int i = 1; i <= Model.PaginateCar.TotalPage; i++)
                                 {
                                    <li class="page-item@(Model.PaginateCar.CurrentPage == i? "disabled" : "" ) "><a class="page-link @(Model.PaginateCar.CurrentPage == i ? "paginate-active" : "" )" asp-action="Index" asp-route-page="@i">@i</a></li>
                                 }
                                <li class="page-item @(Model.PaginateCar.HasNext ? "" : "disabled" )">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PaginateCar.CurrentPage+1)" aria-label="Next">
                                        <span aria-hidden="true"><i class="fa-solid fa-angles-right"></i></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="rent-now" style="background-image: url('/assets/image/bentley.jpg');">
        <div class="container">
            <div class="col-12">
                <div class="row">
                    <div class="now-text">
                        <p>RENT YOUR CAR</p>
                        <h3>Interested in Renting?</h3>
                        <h6>Don't hesitate and send us a message.</h6>
                    </div>
                    <div class="rent">
                        <a class="wp-btn" href="">
                            <i class="fa-brands fa-whatsapp"></i> Whatsapp
                        </a>
                        <a class="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Rent Now <i class="fa-solid fa-arrow-right"></i>
                        </a>
                    </div>
                    <div class="modal fade rentcar" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Booking Form</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="booking-form">
                                        <div class="booking-inner">
                                            <form method="post" action="#0" class="form">
                                                <div class="booking-box">
                                                    <form method="post" action="#0" class="form">
                                                        <div class="row">
                                                            <div class="col-lg-6 col-md-12">
                                                                <input name="phone" type="text"
                                                                       placeholder="Phone *" required>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"style="width: 100%">
                                                                            <option value="0">Choose Car</option>
                                                                            <option value="1">Lamborghini Urus</option>
                                                                            <option value="2">Aston Martin DBX</option>
                                                                            <option value="3">Bentley Bentayga</option>
                                                                            <option value="4">Bugatti Mistral W16</option>
                                                                            <option value="5">Rolls Royce Cullinan</option>
                                                                            <option value="6">Bentley Continental</option>
                                                                            <option value="7">Audi RS7 Sport Carsback</option>
                                                                            <option value="8">AUDI Q8</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"style="width: 100%">
                                                                            <option value="0">Pick Up Location
                                                                            </option>
                                                                            <option value="1">Dubai</option>
                                                                            <option value="2">Abu Dhabi</option>
                                                                            <option value="3">Sharjah</option>
                                                                            <option value="4">Alain</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="selects">
                                                                    <div class="select-area">
                                                                        <select class="select-box"style="width: 100%">
                                                                            <option value="0">Drop Off Location
                                                                            </option>
                                                                            <option value="1">Alain</option>
                                                                            <option value="2">Sharjah</option>
                                                                            <option value="3">Abu Dhabi</option>
                                                                            <option value="4">Dubai</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="inputs">
                                                                    <label>Pick Up Date</label>
                                                                    <div class="inputs">
                                                                        <input type="date"placeholder="Pick Up Date" required>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-12">
                                                                <div class="inputs">
                                                                    <label>Return Date</label>
                                                                    <div class="inputs">
                                                                        <input type="date"placeholder="Return Date">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-12 col-md-12 form-group">
                                                                <textarea name="message" id="message" cols="30"rows="4"placeholder="Additional Note"></textarea>
                                                            </div>
                                                            <div class="col-lg-12 col-md-12">
                                                                <button type="submit"
                                                                        class="booking-button mt-15">Rent Now
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="alert alert-success contact__msg"
                                                             style="display: none" role="alert">Your message was sent successfully.
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cover"></div>
        </div>
    </section>
</main>


@section js {
    <script src="~/assets/js/car-listing.js"></script>
}